{% extends "base.html.twig" %}

{% block title %}
	{{ article.title }}
{% endblock %}

{% block main %}

	<main>

		<article>
			<h2>{{ article.title }}</h2>

			<p>
				<a href="{{ path('delete-article', {'id': article.id}) }}">Supprimer l'article</a>
			</p>

			<img src="{{ article.image }}" width="80%">

			<p>
				{{ article.description }}</p>
			<p>
				{{ article.content }}
			</p>

			<p>
				{{ article.createdAt | date ('d/m/Y') }}
			</p>
		</article>

	</main>
{% endblock main %}
