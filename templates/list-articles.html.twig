{% extends "base.html.twig" %}

{% block title %}
	Articles list
{% endblock %}

{% block main %}
	<main>

		<section class="success-message">
			{% for message in app.flashes('success') %}
				<p>{{ message }}</p>
			{% endfor %}
		</section>

		<h2>Liste des articles</h2>

		{% for article in articles %}
			<article>
				<h3>
					<a href=" {{ path ('detail-article', {'id' : article.id }) }}">{{ article.title }}</a>
				</h3>

				<p>
					<a href="{{ path('update-article', {'id': article.id}) }}">✏️ Editer l'article ✏️</a>
				</p>

				<p>
					<a href="{{ path('delete-article', {'id': article.id}) }}"> 🗑 Supprimer l'article 🗑 </a>
				</p>

				<img src="{{ article.image }}" width="80%">

			</article>
		{% endfor %}
	</main>
{% endblock main %}
